{
  "name": "yocto_erp",
  "version": "1.0.0",
  "description": "Simple lite ERP Management ",
  "main": "index.js",
  "engines": {
    "node": ">=15"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "clean-log": "rimraf logs && mkdir logs",
    "copy-template": "ncp app/service/template/print_template.html dist/service/template/print_template.html && ncp app/service/template/template.html dist/service/template/template.html && ncp app/service/template/print dist/service/template/print",
    "build": "npm run clean && babel app --out-dir dist && ncp app/template dist/template && ncp app/swagger/swagger.json dist/swagger/swagger.json && npm run copy-template",
    "start": "env-cmd nodemon --exec babel-node app/server.js",
    "serve": "env-cmd node dist/server.js",
    "test": "mocha --recursive --timeout 100000 --exit",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "ERP",
    "Yocto"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:yocto-erp/backend.git"
  },
  "author": "Yocto Erp Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cids": "^1.0.2",
    "cron": "^1.8.2",
    "exceljs": "^4.1.0",
    "express": "^4.17.1",
    "fastq": "^1.8.0",
    "files-from-path": "^0.2.6",
    "firebase-admin": "^9.4.2",
    "fs": "^0.0.2",
    "google-libphonenumber": "^3.2.10",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "lodash.merge": ">=4.6.2",
    "mailgun.js": "^2.0.1",
    "md5": "^2.2.1",
    "moment": "^2.27.0",
    "moment-timezone": "^0.5.31",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "mustache": "^4.0.1",
    "mysql2": "^2.1.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.6.3",
    "numeral": "^2.0.6",
    "openpgp": "^4.10.8",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "puppeteer": "^13.1.2",
    "randomstring": "^1.1.5",
    "sequelize": "^6.18.0",
    "serialize-javascript": "^4.0.0",
    "sharp": "^0.30.3",
    "socket.io": "^4.0.0",
    "swagger-ui-express": "^4.1.5",
    "telegraf": "^3.38.0",
    "uuid": "^8.2.0",
    "web3": "^1.3.0",
    "web3.storage": "^4.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/register": "^7.10.4",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.1.0",
    "env-cmd": "^10.1.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-watch": "^4.0.2",
    "mocha": "^8.0.1",
    "ncp": "^2.0.0",
    "nodemon": "^1.19.4",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "app/**/*.js"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**"
    ],
    "all": true
  }
}
